@model MyCompany.Models.tblPartner

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Create", "Partner", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()

    <div class="row body-content">
        <h3>Create</h3>
        <hr />
    </div>

    <div class="form-horizontal margin-bottom-15">
        @Html.ValidationSummary(true, "", new { @class = "alert alert-error margin-bottom-15 alert-danger box_button", style = "font-weight:600" })
        <div class="form-group">
            @Html.HiddenFor(model => model.IDPartner)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IDNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IDNumber, new { htmlAttributes = new { @class = "form-control", style = "max-width:25%;width:25%", type="number" } })
                @Html.ValidationMessageFor(model => model.IDNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", style = "max-width:50%;width:50%" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", style = "max-width:40%;width:40%", type = "number" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

       <div class="form-group">
            @Html.LabelFor(model => model.Address1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Address1, new { @class = "form-control", style = "max-width:40%;width:40%" })
                @Html.ValidationMessageFor(model => model.Address1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address2, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Address2, new { @class = "form-control", style = "max-width:40%;width:40%" })
                @Html.ValidationMessageFor(model => model.Address2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address3, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Address3, new { @class = "form-control", style = "max-width:40%;width:40%" })
                @Html.ValidationMessageFor(model => model.Address3, "", new { @class = "text-danger" })
            </div>
        </div>

        @{
            if (Model.IDPartner != 0)
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.IsActive)
                            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            }
        }
        
        <div class="form-group margin-top-15">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-info box_button"><i class="fa fa-save fa-3x"></i></button>
                <button type="button" onclick="window.location.href='@ViewBag.backPage'" class="btn btn-info box_button"><i class="fa fa-refresh fa-3x"></i></button>
            </div>
        </div>
    </div>
}

