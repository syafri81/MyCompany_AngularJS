
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    <script src="~/Scripts/Form/ProductIndex.js"></script>
    <script src="~/Scripts/Form/ProductCampaignToggle.js"></script>
}
<div class="row body-content">
    <div class="pull-right">
        <button type="button" class="btn btn-danger box_button" style="margin-top:10px" onclick="window.location.href='@ViewBag.createPage'" title="Add Product"><i class="fa fa-cart-plus fa-3x"></i></button>
    </div>
    <h2>Product</h2>
    <hr />
</div>
<div ng-app="MyApp">
    <div ng-controller="IndexDataCtrl">
        <div class="row body-content">
            <div class="col-lg-12 body-zero">
                <div class="col-lg-4 body-zero">
                    <div class="form-group">
                        @Html.Label("Campaign", htmlAttributes: new { @class = "control-label col-md-3 body-zero" })
                        <div class="col-md-9">
                            <select id="IDCampaign" name="IDCampaign" class="form-control" ng-model="search.IDCampaign" style="width:100%;max-width:100%" onchange="comboSupplier(0)"></select>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 body-zero">
                    <div class="form-group">
                        @Html.Label("Supplier", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            <select id="IDSupplier" name="IDSupplier" class="form-control" ng-model="search.IDSupplier" style="width:100%;max-width:100%"></select>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 body-zero">
                    <button type="button" class="btn btn-info box_button" onclick="window.location.reload()" title="Add Product"><i class="fa fa-refresh fa-2x"></i></button>
                </div>
            </div>
        </div>
        <div class="row body-content margin-top-10">
            <table class="table">
                <thead style="background-color: #009688;color:white;font-weight:600">
                    <tr>
                        <th>#</th>
                        <th style="width:35%"><i class="fa fa-shopping-cart"></i></th>
                        <th style="width:10%"><i class="fa fa-list"></i></th>
                        <th style="width:15%"><i class="fa fa-group"></i></th>
                        <th style="width:20%"><i class="fa fa-user-circle"></i></th>
                        <th style="width:5%"><i class="fa fa-hand-o-down"></i></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-show="IndexData.length==0">
                        <td colspan="6"><label>No records.</label></td>
                    </tr>
                    <tr ng-repeat="m in IndexData | filter:search">
                        <td>{{$index + 1}}</td>
                        <td>{{m.ProductName}}
                            <br /><b>{{m.Price}}</b>
                        </td>
                        <td>{{m.Weight}} {{m.Size}}</td>
                        <td>{{m.CampaignName}}</td>
                        <td>{{m.SupplierName}}
                            <br />{{m.PhoneNumber}}
                        </td>
                        <td>
                            <input type="checkbox" id="chk_{{m.IDSupplier}}" ng-click="toggleActive()" checked ng-if="m.IsActive==true" />
                            <input type="checkbox" id="chk_{{m.IDSupplier}}" ng-click="toggleActive()" ng-if="m.IsActive==false" />

                        </td>
                        <td align="right">
                            <button type="button" class="btn btn-cyan box_button btn-crud" title="detail"><i class="fa fa-list fa-2x"></i></button>
                            <button type="button" ng-click="edit()" class="btn btn-cyan box_button btn-crud" title="edit"><i class="fa fa-edit fa-2x"></i></button>
                            <button type="button" ng-click="delete()" class="btn btn-cyan box_button btn-crud" title="remove"><i class="fa fa-trash fa-2x"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

